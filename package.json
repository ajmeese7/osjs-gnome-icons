{
  "name": "@osjs/gnome-icons",
  "version": "4.0.4",
  "description": "OS.js v3 Gnome Icons",
  "files": [
    "dist/",
    "metadata.json"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint": "eslint index.js",
    "stylelint": "stylelint index.scss src/**/*.scss",
    "build": "webpack",
    "watch": "webpack --watch",
    "prepublishOnly": "npm run eslint && npm run stylelint && rm -rf ./dist/* && NODE_ENV=production npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/os-js/osjs-gnome-icons.git"
  },
  "keywords": [
    "osjs"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "file-loader": "^5.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.14.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "author": "Anders Evenrud <andersevenrud@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/os-js/osjs-gnome-icons/issues"
  },
  "homepage": "https://github.com/os-js/osjs-gnome-icons#readme",
  "osjs": {
    "type": "package"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8
    },
    "globals": {
      "Promise": true,
      "ArrayBuffer": true,
      "File": true,
      "Blob": true,
      "OSjs": true,
      "OSJS_VERSION": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "radix": 1,
      "eol-last": [
        "error",
        "always"
      ],
      "consistent-return": 1,
      "space-in-parens": [
        "error",
        "never"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-infix-ops": [
        "error",
        {
          "int32Hint": false
        }
      ],
      "space-unary-ops": [
        "error",
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        "warn",
        "always"
      ],
      "prefer-arrow-callback": 1,
      "prefer-spread": 1,
      "prefer-rest-params": 1,
      "template-curly-spacing": [
        "warn",
        "never"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "no-useless-constructor": 1,
      "no-var": 2,
      "no-duplicate-imports": 2,
      "no-console": "off",
      "no-extra-semi": 2,
      "no-eval": 2,
      "no-invalid-this": 1,
      "no-new-func": 2,
      "no-return-await": 1,
      "no-self-compare": 2,
      "no-with": 2,
      "no-multi-assign": 1,
      "no-new-object": 2,
      "no-tabs": 1
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "extend",
            "mixin",
            "include"
          ]
        }
      ]
    },
    "extends": "stylelint-config-standard"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
